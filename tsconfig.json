{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "outDir": "compiled",
    "paths": {
      "@test/*": ["test/*"]
    },
    "pretty": true,
    "allowJs": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true
  },
  "files": [
    "src/core/index.ts",
    "src/ui/index.ts"
  ],
  "include": [
    "src/ext/types"
  ],
  "exclude": [
    "test"
  ]
}
