{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@test/*": ["test/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
