{
  "name": "yve-bot",
  "version": "1.6.0",
  "description": "Smart rule-based bot",
  "main": "core.js",
  "repository": "https://github.com/andersonba/yve-bot",
  "author": "Anderson de Oliveira <andersonba@me.com>",
  "license": "MIT",
  "scripts": {
    "test": "yarn lint && yarn test:coverage && yarn test:bundle",
    "test:strict": "jest",
    "test:coverage": "yarn test:strict -- --coverage",
    "test:watch": "yarn test:strict -- --watch",
    "test:bundle": "bundlesize",
    "lint": "tslint --project tsconfig.json",
    "clean": "rm -rf lib",
    "build": "webpack --bail",
    "watch": "webpack --watch --watch-poll"
  },
  "devDependencies": {
    "@types/fetch-mock": "^5.12.1",
    "@types/jest": "^20.0.8",
    "@types/lodash": "^4.14.73",
    "@types/node": "^8.0.24",
    "awesome-typescript-loader": "^3.2.3",
    "bundlesize": "^0.15.3",
    "faker": "^4.1.0",
    "fetch-mock": "^5.13.1",
    "jest": "^21.0.2",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.4.2",
    "webpack": "^3.4.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|js)"
    ],
    "moduleNameMapper": {
      "^@test/(.*)": "<rootDir>/test/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/types.ts",
      "!src/core/index.ts",
      "!src/ui/index.ts"
    ]
  },
  "bundlesize": [
    {
      "path": "./lib/core.js",
      "maxSize": "6 kB"
    },
    {
      "path": "./lib/ui.js",
      "maxSize": "35 kB"
    }
  ]
}
